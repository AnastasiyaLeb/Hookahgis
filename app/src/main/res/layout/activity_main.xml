<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Logo"
            android:textSize="72sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.342" android:id="@+id/textView"/>
    <Button
            android:text="@string/Yes_Age"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:id="@+id/age_yes"
            android:background="@color/colorPrimaryDark"
            android:onClick="Age_yes"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/age_no"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/No_Age"
            android:ems="10"
            android:textSize="24sp"
            android:id="@+id/age_no"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:longClickable="false" android:freezesText="true" android:textAlignment="center"
            android:onClick="Age_no"/>

</androidx.constraintlayout.widget.ConstraintLayout>