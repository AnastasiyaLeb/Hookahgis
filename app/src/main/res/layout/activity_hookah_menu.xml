<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hookah_menu">

    <Button
            android:text="@string/Hookah"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/choose_hookah" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp"/>
    <Button
            android:text="Button"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/choose_tabak" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"/>
    <Button
            android:text="Button"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/choose_other"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/choose_hookah"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"/>
    <Button
            android:text="Button"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/where_to_smoke"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/choose_tabak"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"/>
    <Button
            android:text="Button"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/guides"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/choose_other"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="101dp"/>
    <Button
            android:text="Button"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/about_us"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/where_to_smoke"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="101dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>